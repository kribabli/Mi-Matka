<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/liner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/white_card_view"
            android:backgroundTint="#FFFFFF"
            android:elevation="4dp"
            android:orientation="vertical"
            android:padding="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/new_font"
                android:text="Add Referral Code"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="normal" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="10dp"
                android:alpha="0.6"
                android:background="@color/lineColor" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/referral_img" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/new_font"
                android:gravity="center"
                android:text="Add referral code of user who shared you this app."
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="normal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/new_font"
                android:text="Referral"
                android:textColor="@color/fontColor"
                android:textSize="14sp"
                android:textStyle="normal" />

            <EditText
                android:id="@+id/referral_edt"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="5dp"
                android:background="@drawable/white_card_view"
                android:backgroundTint="@color/whiite"
                android:elevation="3dp"
                android:ellipsize="end"
                android:fontFamily="@font/new_font"
                android:gravity="center_vertical"
                android:hint="Enter Referral here"
                android:inputType="text"
                android:lines="1"
                android:paddingHorizontal="10dp"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="normal" />

            <Button
                android:id="@+id/submit_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="15dp"
                android:background="@drawable/buttonredcolorround"
                android:backgroundTint="@color/Blue_Dress"
                android:fontFamily="@font/new_font"
                android:text="Submit"
                android:textAllCaps="false"
                android:textColor="#FFFFFF" />


        </androidx.appcompat.widget.LinearLayoutCompat>


    </RelativeLayout>

    <ImageView
        android:id="@+id/close_img"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:clickable="true"
        android:foreground="?selectableItemBackground"
        android:src="@drawable/wrong" />


</RelativeLayout>