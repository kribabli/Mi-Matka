<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiite"
    tools:context=".AllActivities.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorPrimaryDark"
            android:elevation="4dp">

            <ImageView
                android:id="@+id/navImg"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="10dp"
                app:srcCompat="@drawable/ic_baseline_menu_24"
                app:tint="@color/black" />

            <TextView
                android:id="@+id/headToolTxt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginRight="15dp"
                android:fontFamily="@font/new_font"
                android:gravity="center"
                android:text="@string/app_name"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/wallet_img"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    android:padding="10dp"
                    android:visibility="gone"
                    app:srcCompat="@drawable/wallet" />

                <ImageView
                    android:id="@+id/notif_img"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    android:padding="10dp"
                    app:srcCompat="@drawable/bell_img" />


                <TextView
                    android:id="@+id/balance_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginHorizontal="5dp"
                    android:fontFamily="@font/new_font"
                    android:text="0.00/-"
                    android:textColor="@android:color/holo_orange_dark"
                    android:textSize="22sp"
                    android:textStyle="bold" />


            </androidx.appcompat.widget.LinearLayoutCompat>


        </RelativeLayout>

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swiper"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <androidx.core.widget.NestedScrollView
                android:id="@+id/scroll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true"
                android:overScrollMode="never">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <!--                Main content-->

                        <LinearLayout
                            android:id="@+id/top_reler"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/whiite"
                            android:orientation="vertical">

                            <org.imaginativeworld.whynotimagecarousel.ImageCarousel
                                android:id="@+id/carousel"
                                android:layout_width="match_parent"
                                android:layout_height="300dp"
                                android:layout_marginHorizontal="10dp"
                                android:layout_marginVertical="10dp"
                                app:autoPlay="true"
                                app:autoPlayDelay="4000"
                                app:autoWidthFixing="true"
                                app:bottomShadowAlpha="0"
                                app:carouselBackground="@color/Transparent"
                                app:carouselPadding="10dp"
                                app:carouselType="SHOWCASE"
                                app:imageScaleType="centerCrop"
                                app:infiniteCarousel="true"
                                app:scaleOnScroll="true"
                                app:scalingFactor="0.15"
                                app:showCaption="false"
                                app:showNavigationButtons="false"
                                app:topShadowAlpha="0"
                                app:touchToPause="true" />


                            <TextView
                                android:id="@+id/top_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:lines="1"
                                android:padding="5dp"
                                android:text="This is text from server.."
                                android:textColor="@color/black"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:visibility="gone" />

                        </LinearLayout>

                        <RelativeLayout
                            android:id="@+id/starline_reler"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:layout_marginHorizontal="10dp"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/big_button_img"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:fontFamily="@font/new_font"
                                android:gravity="center"
                                android:text="STARLINE GAMES"
                                android:textColor="@color/black"
                                android:textSize="18sp" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/roulette_reler"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:layout_marginHorizontal="10dp"
                            android:background="@drawable/big_button_img"
                            android:clickable="true"
                            android:foreground="?selectableItemBackground"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:fontFamily="@font/new_font"
                                android:gravity="center"
                                android:text="ROULETTE GAMES"
                                android:textColor="@color/black"
                                android:textSize="18sp" />

                        </RelativeLayout>


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:background="@drawable/white_card_view"
                            android:backgroundTint="#202020"
                            android:elevation="4dp"
                            android:minHeight="100dp"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/username_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginHorizontal="15dp"
                                android:fontFamily="@font/new_font"
                                android:text="Balance"
                                android:textColor="@color/black"
                                android:textSize="18sp" />


                        </RelativeLayout>


                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <TextView
                                android:visibility="gone"
                                android:id="@+id/call_txt"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="3dp"
                                android:layout_marginBottom="10dp"
                                android:layout_weight="1"
                                android:background="#E729ED"
                                android:drawableLeft="@drawable/drawable_sized_yt"
                                android:drawableTint="@color/whiite"
                                android:ellipsize="end"
                                android:gravity="center"
                                android:lines="1"
                                android:padding="18dp"
                                android:text="@string/youtube_link"
                                android:textColor="@color/black"
                                android:textStyle="bold" />


                            <TextView
                                android:id="@+id/whatsapp_txt"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="3dp"
                                android:layout_marginBottom="10dp"
                                android:layout_weight="2"
                                android:background="#E729ED"
                                android:drawableLeft="@drawable/sized_whatsapp"
                                android:gravity="center"
                                android:padding="18dp"
                                android:text="+919669612582"
                                android:textColor="@color/black"
                                android:textStyle="bold" />


                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <TextView
                                android:id="@+id/starline_games_txt"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="3dp"
                                android:layout_marginBottom="10dp"
                                android:layout_weight="1"
                                android:background="#E729ED"
                                android:drawableLeft="@drawable/ic_baseline_favorite_24"
                                android:gravity="center"
                                android:padding="18dp"
                                android:text="Starline Games"
                                android:textColor="@color/black"
                                android:textStyle="bold" />


                            <TextView
                                android:id="@+id/wallet_txt_bottom"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="3dp"
                                android:layout_marginBottom="10dp"
                                android:layout_weight="1"
                                android:background="#E729ED"
                                android:drawableLeft="@drawable/sized_wallet"
                                android:gravity="center"
                                android:padding="18dp"
                                android:text="0.00"
                                android:textColor="@color/black"
                                android:textStyle="bold" />


                        </androidx.appcompat.widget.LinearLayoutCompat>


                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recycler"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:overScrollMode="never"
                            android:paddingTop="10dp" />


                    </LinearLayout>


                </LinearLayout>

            </androidx.core.widget.NestedScrollView>


        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    </LinearLayout>


    <include layout="@layout/include_whatsapp" />

</RelativeLayout>